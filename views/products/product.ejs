<!DOCTYPE html>
<html lang="zh-Hant">
<head>
  <meta charset="UTF-8">
  <title>產品目錄</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <!-- ✅ Bootstrap 5 CDN -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">

  <div class="container py-5">
    <h2 class="mb-4">產品目錄</h2>
    
    <!-- 🌟 產品目錄選擇器 -->
    <div class="row mb-4">
      <div class="col-12">
        <div class="bg-white p-3 rounded shadow-sm">
          <h5 class="mb-3">選擇產品目錄</h5>
          <select class="form-select" id="catalogSelect">
            <option value="" disabled>請選擇產品目錄</option>
            <option value="A" <%= (typeof currentPage !== 'undefined' && currentPage === 'A') ? 'selected' : '' %>>目錄 A</option>
            <option value="B" <%= (typeof currentPage !== 'undefined' && currentPage === 'B') ? 'selected' : '' %>>目錄 B</option>
            <option value="C" <%= (typeof currentPage !== 'undefined' && currentPage === 'C') ? 'selected' : '' %>>目錄 C</option>
            <option value="D" <%= (typeof currentPage !== 'undefined' && currentPage === 'D') ? 'selected' : '' %>>目錄 D</option>
            <option value="E" <%= (typeof currentPage !== 'undefined' && currentPage === 'E') ? 'selected' : '' %>>目錄 E</option>
            <option value="F" <%= (typeof currentPage !== 'undefined' && currentPage === 'F') ? 'selected' : '' %>>目錄 F</option>
            <option value="G" <%= (typeof currentPage !== 'undefined' && currentPage === 'G') ? 'selected' : '' %>>目錄 G</option>
            <option value="H" <%= (typeof currentPage !== 'undefined' && currentPage === 'H') ? 'selected' : '' %>>目錄 H</option>
            <option value="I" <%= (typeof currentPage !== 'undefined' && currentPage === 'I') ? 'selected' : '' %>>目錄 I</option>
            <option value="J" <%= (typeof currentPage !== 'undefined' && currentPage === 'J') ? 'selected' : '' %>>目錄 J</option>
            <option value="K" <%= (typeof currentPage !== 'undefined' && currentPage === 'K') ? 'selected' : '' %>>目錄 K</option>
            <option value="L" <%= (typeof currentPage !== 'undefined' && currentPage === 'L') ? 'selected' : '' %>>目錄 L</option>
            <option value="M" <%= (typeof currentPage !== 'undefined' && currentPage === 'M') ? 'selected' : '' %>>目錄 M</option>
            <option value="N" <%= (typeof currentPage !== 'undefined' && currentPage === 'N') ? 'selected' : '' %>>目錄 N</option>
            <option value="O" <%= (typeof currentPage !== 'undefined' && currentPage === 'O') ? 'selected' : '' %>>目錄 O</option>
            <option value="P" <%= (typeof currentPage !== 'undefined' && currentPage === 'P') ? 'selected' : '' %>>目錄 P</option>
          </select>
        </div>
      </div>
    </div>
    
    <!-- 🌟 目錄內容區域 -->
    <% if (typeof currentPage !== 'undefined' && currentPage) { %>
    <!-- 圖片 + 表單排版 -->
    <div class="row" id="catalogContent">
      <!-- 左側：產品目錄圖片 -->
      <div class="col-md-8 mb-4 d-flex justify-content-center">
        <img
            src="/images/uploads/<%= productImage %>"
            alt="產品目錄 <%= currentPage %>"
            class="img-fluid shadow rounded"
            style="max-width: 80%; height: auto;"
            onerror="this.src='data:image/svg+xml;base64,';"
        >
      </div>

      <!-- 右側：加入購物車表單 -->
      <div class="col-md-4">
        <div class="bg-white p-4 rounded shadow-sm">
          <h4 class="mb-3">加入購物車</h4>
          <form id="quickAddForm" class="row g-2 align-items-center">
            <div class="col-12">
                <select class="form-select" id="productSelect" required>
                <option value="" selected disabled>請選擇商品</option>
                <% if (typeof products !== 'undefined' && products.length > 0) { %>
                  <% products.forEach(product => { %>
                    <option value="<%= product.productNumber %>"
                      data-price="<%= product.basePrice %>">
                    <%= product.name %> (<%= product.productNumber %>)
                    </option>
                  <% }) %>
                <% } %>
                </select>
            </div>
            <!-- 顯示價格 -->
            <div class="col-12 mt-2">
              <p id="productPrice" class="text-muted">價格：-</p>
            </div>
            <!-- 選擇數量 -->
            <div class="col-12">
              <input type="number" min="1" value="1" class="form-control" id="productQty" placeholder="數量" required>
            </div>
            <div class="col-12">
              <button type="submit" class="btn btn-primary w-100">加入購物車</button>
            </div>
          </form>
        </div>
      </div>
    </div>
    <% }%>
    
    <!-- Toast -->
    <div id="toastContainer" class="position-fixed bottom-0 end-0 p-3" style="z-index: 11;"></div>
  </div>

  <!-- Scripts -->
  <script src="/js/cart.js"></script>

</body>
</html>