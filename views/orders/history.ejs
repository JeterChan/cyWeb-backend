<body class="bg-light">
  <div class="container py-5">
    <h2 class="mb-4">🧾 歷史訂單</h2>

    <% if (orders.length === 0) { %>
      <div class="alert alert-info">
        您目前尚未有任何訂單紀錄。
        <a href="/products" class="btn btn-sm btn-primary ms-3">前往購物</a>
      </div>
    <% } else { %>
      <table class="table table-bordered bg-white shadow-sm">
        <thead class="table-light">
          <tr>
            <th>訂單編號</th>
            <th>下單日期</th>
            <th>狀態</th>
            <th>總金額</th>
            <th>操作</th>
          </tr>
        </thead>
        <tbody>
          <% orders.forEach(order => { %>
            <tr>
              <td><%= order.orderNumber %></td>
              <td><%= new Date(order.createdAt).toLocaleDateString('zh-TW') %></td>
              <td><%= getOrderStatusLabel(order.status) %></td>
              <td>$<%= Math.floor(order.totalAmount).toLocaleString('zh-TW') %></td>
              <td>
                <a href="/orders/<%= order.orderNumber %>" class="btn btn-sm btn-secondary">查看</a>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } %>
  </div>
</body>
