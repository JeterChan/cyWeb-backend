<!-- Login Form -->
<div class="container" style="margin-top: 100px;">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <h3 class="text-center mb-4">會員登入</h3>
                    <form action="/users/login" method="POST">
                        <div class="mb-3">
                            <label for="email" class="form-label">電子郵件</label>
                            <input type="email" class="form-control" id="email" name="email" required>
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label">密碼</label>
                            <input type="password" class="form-control" id="password" name="password" required>
                        </div>
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <div class="form-check mb-0">
                                <input type="checkbox" class="form-check-input" id="remember">
                                <label class="form-check-label" for="remember">記住我</label>
                            </div>
                            <a href="/users/forgot-password" class="text-decoration-none">忘記密碼？</a>
                        </div>
                        <button type="submit" class="btn btn-primary w-100">登入</button>
                    </form>

                    <div class="d-flex justify-content-center">
                        <a href="/users/auth/google" class="btn btn-google mt-3">
                            <img src="https://www.gstatic.com/firebasejs/ui/2.0.0/images/auth/google.svg" width="20" style="margin-bottom:3px;">
                            以 Google 帳號登入
                        </a>
                    </div>
                    <hr>
                    <div class="text-center">
                        <p class="mb-0">還沒有帳號？ <a href="/users/register" class="text-decoration-none">立即註冊</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
