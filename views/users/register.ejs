<!-- Register Form -->
<div class="container" style="margin-top: 100px;">
    <div class="row justify-content-center">
        <!-- message -->
        <div class="col-md-6 col-lg-4">
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <h3 class="text-center mb-4">會員註冊</h3>
                    <form action="/users/register" method="POST">
                        <div class="mb-3">
                            <label for="email" class="form-label">電子郵件</label>
                            <input type="email" class="form-control" id="email" name="email" value="<%= oldInput ? oldInput.email : '' %>" required>
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label">密碼</label>
                            <input type="password" class="form-control" id="password" name="password" required>
                            <div class="form-text">密碼長度至少 8 個字元</div>
                        </div>
                        <div class="mb-3">
                            <label for="confirmPassword" class="form-label">確認密碼</label>
                            <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" required>
                        </div>
                        <button type="submit" class="btn btn-primary w-100">註冊</button>
                    </form>

                    <hr>
                    
                    <div class="text-center">
                        <p class="mb-0">已經有帳號？ <a href="/users/login" class="text-decoration-none">立即登入</a></p>
                    </div>
                    <div class="d-flex justify-content-center">
                        <a href="/users/auth/google" class="btn btn-google mt-3">
                            <img src="https://www.gstatic.com/firebasejs/ui/2.0.0/images/auth/google.svg" width="20" style="margin-bottom:3px;">
                            以 Google 帳號登入
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
