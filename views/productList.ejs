<div class="row">
    <div class="col-md-3 mb-4">
        <!-- 篩選器 -->
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">商品篩選</h5>
                <div class="mb-3">
                    <label class="form-label">價格範圍</label>
                    <div class="d-flex">
                        <input type="number" class="form-control me-2" placeholder="最低">
                        <input type="number" class="form-control" placeholder="最高">
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label">分類</label>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="">
                        <label class="form-check-label">分類 1</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="">
                        <label class="form-check-label">分類 2</label>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-9">
        <div class="row row-cols-1 row-cols-md-3 g-4">
            <% products.forEach(function(product) { %>
                <div class="col">
                    <div class="card h-100">
                        <img src="/product/readImages/<%= product.product_id %>" class="card-img-top" alt="<%= product.title %>">
                        <div class="card-body">
                            <h5 class="card-title"><%= product.title %></h5>
                            <p class="card-text">NT$ <%= product.price %></p>
                            <a href="/product/<%= product.product_id %>" class="btn btn-primary">查看詳情</a>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
</div>
